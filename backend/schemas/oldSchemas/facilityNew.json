{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.campsite.com/campSearch.schema.json",
  "type": "object",
  "properties": {
    "parkCode": {
      "type": "string",
      "minLength": 4,
      "maxLength": 4
    },
    "cellPhoneReception": {
      "type": "boolean"
    },
    "toilets": {
      "type": "string",
      "anyOf": [
        { "type": "string", "pattern": "^No Toilets" },
        { "type": "string", "pattern": "^Vault Toilets" },
        { "type": "string", "pattern": "^Portable Toilets" },
        { "type": "string", "pattern": "^Flush Toilets" },
        { "type": "string", "pattern": "^Composting Toilets" }
      ]
    },
    "boat_access": {
      "type": "boolean"
    },
    "rv_accesss": {
      "type": "boolean"
    },
    "wheelchair_access": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["parkCode"]
}
